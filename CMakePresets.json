{
  "version": 2,
  "configurePresets": [
    {
      "name": "base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "develop",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build_develop",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "RESOURCE_DIR": "${sourceDir}/assets_for_dev",
        "FORCE_USE_CPP_MAIN": "ON"
      }
    },
    {
      "name": "debug",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build_debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "GENERATE_PACKAGE": "ON"
      }
    },
    {
      "name": "debug-windows",
      "inherits": "debug",
      "binaryDir": "${sourceDir}/build_debug_windows",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe",
        "FORCE_USE_CPP_MAIN": "ON"
      }
    },
    {
      "name": "release-validation",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build_release_validation",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "GENERATE_PACKAGE": "ON",
        "ENABLE_VALIDATION_LAYERS": "ON"
      }
    },
    {
      "name": "release-validation-windows",
      "inherits": "release-validation",
      "binaryDir": "${sourceDir}/build_release_validation_windows",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe",
        "FORCE_USE_CPP_MAIN": "ON"
      }
    },
    {
      "name": "release",
      "inherits": "base",
      "binaryDir": "${sourceDir}/build_release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "GENERATE_PACKAGE": "ON"
      }
    },
    {
      "name": "release-windows",
      "inherits": "release",
      "binaryDir": "${sourceDir}/build_release_windows",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      }
    },
    {
      "name": "clang-tidy",
      "inherits": "develop",
      "binaryDir": "${sourceDir}/build_clang_tidy"
    }
  ]
}
